// Mathematical Operations Demo
// Demonstrates: All arithmetic operations, type mixing

print("Basic Arithmetic Operations:");
int a = 15;
int b = 4;
float pi = 3.14;

print("Integer Operations:");
print("a =", a, ", b =", b);
print("a + b =", a + b);
print("a - b =", a - b);
print("a * b =", a * b);
print("a / b =", a / b);
print("a % b =", a % b);
print("a ** 2 =", a ** 2);

print("\nFloat Operations:");
float radius = 5.0;
float area = pi * radius * radius;
print("Circle area (r=5):", area);

print("\nComparisons:");
print("15 > 4:", a > b);
print("15 <= 4:", a <= b);
print("15 == 15:", a == a);
print("15 != 4:", a != b);
